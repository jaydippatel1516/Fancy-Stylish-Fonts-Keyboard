<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FancyStylishFontsKeyboard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.FancyStylishFontsKeyboard" parent="Base.Theme.FancyStylishFontsKeyboard" />

    <style name="Theme.FancyFontsKeyboard" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="fontFamily">@font/font</item>
    </style>

    <style name="HomeBtn">
        <item name="android:padding">@dimen/_11sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="HomeText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">@dimen/_180sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>

    <style name="LargeIconView">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="SettingsBtn">
        <item name="android:padding">@dimen/_6sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>

    <style name="SettingsText" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
    </style>
</resources>
